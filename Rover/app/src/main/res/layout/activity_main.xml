<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<TextView
	    android:id="@+id/verticalSeekbarText2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@+id/verticalSeekbar2"
	    android:padding="10dp"
	    android:text="Value"
	    tools:context=".MainActivity" />

	<TextView
	    android:id="@+id/verticalSeekbarText1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/verticalSeekbar1"
	    android:padding="10dp"
	    android:text="Value"
	    tools:context=".MainActivity" />

	<ScrollView
	    android:id="@+id/scrollViewContent"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/verticalSeekbarText1"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentTop="true"
	    android:layout_alignRight="@+id/verticalSeekbarText2" >

		<TextView
		    android:id="@+id/textViewContent"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" />

	</ScrollView>

	<com.eddl.rover.VerticalSeekBar
	    android:id="@+id/verticalSeekbar2"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginRight="103dp"
	    android:max="255"
	    android:progress="122" />

	<com.eddl.rover.VerticalSeekBar
	    android:id="@+id/verticalSeekbar1"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="100dp"
	    android:max="255"
	    android:progress="122" />

</RelativeLayout>